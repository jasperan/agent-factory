# ==============================================================================
# ATLAS CMMS CONFIGURATION (WS-1 Phase 1)
# ==============================================================================
# Atlas CMMS work order management system integration
# See: deploy/atlas/README.md for deployment instructions

# Atlas API Connection
ATLAS_BASE_URL=http://localhost:8080/api
ATLAS_EMAIL=admin@example.com
ATLAS_PASSWORD=admin

# Request Configuration
ATLAS_TIMEOUT=30.0
ATLAS_MAX_RETRIES=3

# Feature Flag (set to false to disable Atlas integration)
ATLAS_ENABLED=true

# Token Management
ATLAS_TOKEN_TTL=86400           # 24 hours in seconds
ATLAS_TOKEN_REFRESH_BUFFER=300  # 5 minutes before expiry to refresh

# ==============================================================================
# OPENAI API CONFIGURATION
# ==============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================================================
# ANTHROPIC API CONFIGURATION
# ==============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================================================
# GOOGLE API CONFIGURATION
# ==============================================================================
GOOGLE_API_KEY=your_google_api_key_here

# ==============================================================================
# EXTERNAL APIS
# ==============================================================================
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# ==============================================================================
# TELEGRAM BOT CONFIGURATION
# ==============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ORCHESTRATOR_BOT_TOKEN=your_orchestrator_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here
AUTHORIZED_TELEGRAM_USERS=comma,separated,user,ids

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# Primary database provider (neon, supabase, railway, local)
DATABASE_PROVIDER=neon

# Failover configuration
DATABASE_FAILOVER_ENABLED=true
DATABASE_FAILOVER_ORDER=neon,supabase

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DB_PASSWORD=your_supabase_db_password
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres

# Railway Configuration
RAILWAY_API_KEY=your_railway_api_key
RAILWAY_DB_HOST=containers-us-west-xxx.railway.app
RAILWAY_DB_PORT=5432
RAILWAY_DB_NAME=railway
RAILWAY_DB_USER=postgres
RAILWAY_DB_PASSWORD=your_railway_password
RAILWAY_DB_URL=postgresql://postgres:password@host:5432/railway

# Neon Configuration
NEON_DB_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Local Database Configuration
LOCAL_DB_URL=postgresql://postgres:password@localhost:5432/agent_factory

# ==============================================================================
# VPS KNOWLEDGE BASE CONFIGURATION
# ==============================================================================
VPS_KB_HOST=72.60.175.144
VPS_KB_PORT=5432
VPS_KB_USER=rivet
VPS_KB_PASSWORD=your_vps_kb_password
VPS_KB_DATABASE=rivet

# VPS Ollama Configuration
VPS_OLLAMA_URL=http://72.60.175.144:11434

# ==============================================================================
# LLM CONFIGURATION
# ==============================================================================
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4o
DEFAULT_TEMPERATURE=0.0

# ==============================================================================
# VOICE CONFIGURATION
# ==============================================================================
VOICE_MODE=edge
EDGE_VOICE=en-US-GuyNeural
OPENAI_VOICE=alloy

# ==============================================================================
# API KEY (GENERIC)
# ==============================================================================
API_KEY=your_api_key_here

# ==============================================================================
# DEPLOYMENT PLATFORMS
# ==============================================================================
RENDER_API_KEY=your_render_api_key
HOSTINGER_API_TOKEN=your_hostinger_api_token

# ==============================================================================
# PYTHON CONFIGURATION
# ==============================================================================
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO
VERBOSE=true

# ==============================================================================
# OLLAMA CONFIGURATION
# ==============================================================================
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434

# Component-specific Ollama models
OLLAMA_MODEL=llama3.2                     # Default general-purpose
OLLAMA_MODEL_SCORING=llama3.2             # IssueQueueBuilder semantic scoring
OLLAMA_MODEL_INTENT=llama3.2              # IntentDetector classification
OLLAMA_MODEL_CODING=deepseek-coder:6.7b   # OpenHandsWorker code generation

# ==============================================================================
# OBSERVABILITY CONFIGURATION
# ==============================================================================
# LangFuse
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_BASE_URL=https://us.cloud.langfuse.com

# LangSmith (RivetCEO Bot Tracing)
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=rivet-ceo-bot-dev
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ==============================================================================
# GITHUB CONFIGURATION
# ==============================================================================
GITHUB_TOKEN=your_github_token

# ==============================================================================
# CODERABBIT CONFIGURATION
# ==============================================================================
CODERABBIT_API_KEY=your_coderabbit_api_key

# ==============================================================================
# GROQ CONFIGURATION
# ==============================================================================
GROQ_API_KEY=your_groq_api_key

# ==============================================================================
# KB OBSERVABILITY SETTINGS
# ==============================================================================
KB_NOTIFICATION_MODE=BATCH
NOTIFICATION_QUIET_START=23
NOTIFICATION_QUIET_END=7

# ==============================================================================
# STRIPE CONFIGURATION
# ==============================================================================
# Dashboard: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Price IDs - Create products at https://dashboard.stripe.com/test/products
STRIPE_PRICE_BASIC=price_your_basic_price_id
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_price_id
