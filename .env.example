# RIVET BACKEND ENVIRONMENT CONFIGURATION

# DATABASE CONFIGURATION
DATABASE_PROVIDER=neon
NEON_DB_URL=postgresql://user:password@host/database

# VECTOR STORAGE CONFIGURATION (NEW in WS-1)
# Vector storage backend: "postgres" or "chromadb"
VECTOR_STORE_BACKEND=postgres
CHROMA_PERSIST_DIR=./chroma_db

# LLM API KEYS
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# TELEGRAM BOT
TELEGRAM_BOT_TOKEN=123456:ABC-DEF

# STRIPE
STRIPE_SECRET_KEY=sk_test_xxx

# LANGSMITH OBSERVABILITY
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__xxx
LANGCHAIN_PROJECT=rivet-backend

# APPLICATION
ENVIRONMENT=development
API_BASE_URL=http://localhost:8000
LOG_LEVEL=INFO

# SLACK SUPERVISOR (Agent Observability)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret

# MIRO WIREFRAME GENERATOR
# Get token: https://miro.com/app/settings/user-profile/apps
# Get board ID from board URL: https://miro.com/app/board/YOUR_BOARD_ID_HERE/
MIRO_ACCESS_TOKEN=your_miro_personal_access_token_here
MIRO_BOARD_ID=your_miro_board_id_here

# FACTORY.IO INTEGRATION (PLC Code Verification)
# Factory.io Web API (no API key required - local HTTP server)
# Enable in Factory.io console: app.web_server = True
# Default port is 7410, customizable via: app.web_server_url = "http://localhost:7410"
FACTORY_IO_URL=http://localhost:7410
FACTORY_IO_TIMEOUT=5
